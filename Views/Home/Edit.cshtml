@model Carreras

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4">Editar</h1>
<hr />
<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Titulo" class="control-label"></label>
        <input asp-for="Titulo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Creditos" class="control-label"></label>
        <input asp-for="Creditos" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Campus" class="control-label"></label>
        <input asp-for="Campus" class="form-control" />
    </div>
    <button class="btn btn-success">Guardar</button> |
    <a asp-action="Index" class="btn btn-danger">Cancelar</a>
</form>

